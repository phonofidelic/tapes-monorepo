    "eslint": "^9.16.0",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "typescript": "5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
